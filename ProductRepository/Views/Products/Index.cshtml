
@{
    ViewData["Title"] = "Index";
}
@model List<ProductViewModel>;




@if (TempData["message"] != null)
{
    <div class="alert alert-danger" role="alert">
       @TempData["message"]
    </div>
}
<div>
<h1 style="display: inline-block; margin-right: 10px; vertical-align: middle;"><italic>Products</italic></h1>
<a class="btn text-white text-decoration-none" style="background-color: #ff914d; display: inline-block; vertical-align: middle;" asp-controller="Products" asp-action="Add">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Color</th>
            <th scope="col">Date</th>
            <th scope="col">Screen Size</th>
            <th scope="col">Process</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
                <td scope="row">@item.Name</td>
                <td scope="row">@item.Price</td>
                <td scope="row">@item.Stock</td>
                <td scope="row">@item.Color</td>
                <td scope="row">@item.ProductDate</td>
                <td scope="row">@item.Size</td>
                <td scope="row">
                    <a class="btn  text-white text-decoration-none" style="background-color: #ffad7d" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                    <a class="btn  text-white text-decoration-none" style="background-color: #ff914d"  asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn  text-white text-decoration-none" style="background-color: #d47842" asp-controller="Products" asp-controller="Products" asp-action="GetById" asp-route-id="@item.Id">View</a>
                </td>
        </tr>
        }
    </tbody>
</table>