@model ProductViewModel 
<form asp-controller="Products" asp-action="Add" method="post">

	<div class="mb-3">
		<label asp-for="Name" class="form-label">Product Name: </label>
		<input class="form-control" asp-for="Name">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Price" class="form-label">Product Price: </label>
		<input class="form-control" asp-for="Price">
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Stock" class="form-label">Product Stock: </label>
		<input type="number" class="form-control" asp-for="Stock">
		<span asp-validation-for="Stock" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Color" class="form-label">Color:</label>
		<select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect">
			<option value="">Color Options</option>
		</select>
		<span asp-validation-for="Color" class="text-danger"></span>
	</div>

	
	<br />
	<div class="mb-3">
		<label class="form-label" asp-for="ProductDate">Product Date</label>
		<input class="form-control" asp-for="ProductDate">
		<span asp-validation-for="ProductDate" class="text-danger"></span>
	</div>

	<br />
	<div class="mb-3">
		<label asp-for="Size" class="form-label">Size : </label>
	</div>
	<div>
		@foreach (var item in ViewBag.Size as Dictionary<string, int>)
		{
			<div class="form-check">
			<input class="form-check-input" type="radio" asp-for="Size" value="@item.Value">
				<label class="form-check-label" for="radioDefault1">
					@item.Key
				</label>
			</div>
		}
		<span asp-validation-for="Size" class="text-danger"></span>
	</div>
	<br />


	<button type="submit" class="btn  text-white text-decoration-none " style="background-color: #d47842 ">Submit</button>



</form>


@section Scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}






